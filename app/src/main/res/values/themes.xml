<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GraveFinder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4E73DF</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4D300D</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Style for rounded buttons -->
        <item name="buttonStyle">@style/RoundedButton</item>

        <!-- Style for rounded boxes -->
        <item name="editTextStyle">@style/RoundedEditText</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <!-- Style for rounded boxes -->
    <style name="RoundedEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/rounded_box</item>
    </style>
</resources>